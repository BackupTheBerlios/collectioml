    <grammar xmlns="http://relaxng.org/ns/structure/1.0" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">

    <define name="marib-id">
            <data type="NMTOKEN">
                <param name="pattern">urn:collectio:0002:[0-9]{4}</param>
            </data>
    </define>

    <define name="marib-owner">
        <choice>
            <value type="token">Teološka Knjižnica Maribor</value>
        </choice>
    </define>

    <define name="marib-inv">
        <choice>
            <value type="token">Teološka Knjižnica Maribor Inventar</value>
        </choice>
    </define>

</grammar>