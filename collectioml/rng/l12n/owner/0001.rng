<grammar xmlns="http://relaxng.org/ns/structure/1.0" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <define name="mcap-id">
    <data type="NMTOKEN">
      <param name="pattern">urn:collectio:0001:scu:[0-9]{5}</param>
    </data>
  </define>
  <define name="mcap-owner">
    <choice>
      <value type="token">Musei Capitolini</value>
      <value type="token">Musei Capitolini - Antiquarium Comunale</value>
      <value type="token">Musei Capitolini - Palazzo Baracco</value>
      <value type="token">Musei Capitolini - Museo della Civilt√† Romana</value>
      <value type="token">Musei Capitolini - Monte Martini</value>
    </choice>
  </define>
  <define name="mcap-inv-name">
    <choice>
      <value type="token">Nuovo Inventario D.M. 18/122 del 1998</value>
      <value type="token">Inventario Vecchio</value>
      <value type="token">Inventario Albani</value>
    </choice>
  </define>
    <define name="mcap-inv-number">
        <data type="NMTOKEN">
            <param name="pattern">[0-9]{5}</param>
        </data>
    </define>
</grammar>