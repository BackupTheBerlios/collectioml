<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://relaxng.org/ns/structure/1.0" ns="http://collectio.org/classifications/">
    <define name="techniqueclasses-basic">
        <element name="techniqueclass">
            <documentation xmlns="http://relaxng.org/ns/compatibility/annotations/1.0">Cascading location classification
                schema for types of techniques. Very sketchy.</documentation>
            <attribute name="schema">
                <value>techniques</value>
            </attribute>
            <attribute name="coverage">
                <value>all times</value>
            </attribute>
            <choice>
                <element name="material">
                    <attribute name="name">
                        <value type="token">metal</value>
                    </attribute>
                    <optional>
                        <element name="method">
                            <attribute name="name">
                                <choice>
                                    <value type="token">fusion</value>
                                    <value type="token">wedging</value>
                                    <value type="token">hammering</value>
                                </choice>
                            </attribute>
                        </element>
                    </optional>
                </element>
                <element name="material">
                    <attribute name="name">
                        <value type="token">stone</value>
                    </attribute>
                    <optional>
                        <element name="method">
                            <attribute name="name">
                                <choice>
                                    <value type="token">drilling</value>
                                    <value type="token">chipping</value>
                                </choice>
                            </attribute>
                        </element>
                    </optional>
                </element>
                <element name="material">
                    <documentation xmlns="http://relaxng.org/ns/compatibility/annotations/1.0">A good glossary at http://www.ifla.org/VII/s30/pub/mg1.htm</documentation>
                    <attribute name="name">
                        <value type="token">paper</value>
                    </attribute>
                    <optional>
                        <element name="method">
                            <attribute name="name">
                                <choice>
                                    <value type="token">aquatint</value>
                                    <value type="token">engraving</value>
                                    <value type="token">etching</value>
                                    <value type="token">watercolour</value>
                                </choice>
                            </attribute>
                        </element>
                    </optional>
                </element>
            </choice>
        </element>
    </define>
</grammar>

