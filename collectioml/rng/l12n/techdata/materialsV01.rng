<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://relaxng.org/ns/structure/1.0" ns="http://collectio.org/classifications/">
    <define name="materialclasses-basic">
        <element name="materialclass">
            <documentation xmlns="http://relaxng.org/ns/compatibility/annotations/1.0">Cascading location classification
                schema for types of materials. Very sketchy.</documentation>
            <attribute name="schema">
                <value>materials</value>
            </attribute>
            <attribute name="coverage">
                <value>all times</value>
            </attribute>
            <choice>
                <element name="material">
                    <attribute name="name">
                        <value type="token">metal</value>
                    </attribute>
                    <optional>
                        <element name="type">
                            <attribute name="name">
                                <choice>
                                    <value type="token">gold</value>
                                    <value type="token">silver</value>
                                    <value type="token">bronce</value>
                                    <value type="token">iron</value>
                                    <value type="token">copper</value>
                                </choice>
                            </attribute>
                        </element>
                    </optional>
                </element>
                <element name="material">
                    <attribute name="name">
                        <value type="token">stone</value>
                    </attribute>
                    <optional>
                        <element name="type">
                            <attribute name="name">
                                <choice>
                                    <value type="token">marmo bianco</value>
                                    <value type="token">pavonazzetto</value>
                                    <value type="token">giallo antico</value>
                                    <value type="token">rosso antico</value>
                                    <value type="token">porfido rosso</value>
                                </choice>
                            </attribute>
                        </element>
                    </optional>
                </element>
                <element name="material">
                    <attribute name="name">
                        <value type="token">bone</value>
                    </attribute>
                </element>
            </choice>
        </element>
    </define>
</grammar>

