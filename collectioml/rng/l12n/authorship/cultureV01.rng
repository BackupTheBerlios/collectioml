<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://relaxng.org/ns/structure/1.0" ns="http://collectio.org/classifications/">
    <define name="authorship-culture">
        <element name="authorclass">
            <documentation xmlns="http://relaxng.org/ns/compatibility/annotations/1.0">The following is an experimental
                relaxng schema for cultural classifications.</documentation>
            <attribute name="type">
                <choice>
                    <value type="string">general</value>
                    <value type="string">invention</value>
                    <value type="string">execution</value>
                    <value type="string">commission</value>
                </choice>
            </attribute>
            <attribute name="schema">
                <value>cultural</value>
            </attribute>
            <attribute name="coverage">
                <value>mediterranean area, classical roman and greek times</value>
            </attribute>
            <choice>
                <element name="culture">
                    <attribute name="name">
                        <value type="token">roman</value>
                    </attribute>
                    <optional>
                        <element name="culturalsphere">
                            <attribute name="name">
                                <choice>
                                    <value type="token">urban</value>
                                    <value type="token">provincial</value>
                                    <value type="token">italic</value>
                                </choice>
                            </attribute>
                        </element>
                    </optional>
                </element>
                <element name="culture">
                    <attribute name="name">
                        <value type="token">greek</value>
                    </attribute>
                    <optional>
                        <element name="culturalsphere">
                            <attribute name="name">
                                <choice>
                                    <value type="token">archaic</value>
                                    <value type="token">hellenistic</value>
                                    <value type="token">roman</value>
                                </choice>
                            </attribute>
                        </element>
                    </optional>
                </element>
                <element name="culture">
                    <attribute name="name">
                        <value type="token">persian</value>
                    </attribute>
                </element>
                <element name="culture">
                    <attribute name="name">
                        <value type="token">villanova</value>
                    </attribute>
                </element>
            </choice>
        </element>
    </define>
</grammar>
