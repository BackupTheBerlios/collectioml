<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://relaxng.org/ns/structure/1.0"
  ns="http://collectio.org/classifications/">
  <define name="locationclass-italy">
    <element name="locationclass" ns="http://collectio.org/classifications/">
      <documentation xmlns="http://relaxng.org/ns/compatibility/annotations/1.0">Coverage: Italy, modern times.</documentation>
      <attribute name="authority">
        <value>collectio:0001</value>
      </attribute>
      <attribute name="coverage">
        <value>Italy</value>
      </attribute>
        <element name="region">
          <choice>
            <value>Lazio</value>
            <value>Piemonte</value>
          </choice>
        </element>
        <optional>
          <element name="city">
            <choice>
              <value>Anzio</value>
              <value>Latina</value>
              <value>Ostia</value>
              <value>Roma</value>
              <value>Tivoli</value>
              <value>Viterbo</value>
              <value>Milano</value>
              <value>Torino</value>
            </choice>
          </element>
        </optional>
    </element>
  </define>
</grammar>
