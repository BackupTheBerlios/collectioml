<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" ns="http://collectio.org/collectioML/"
  xmlns="http://relaxng.org/ns/structure/1.0" xmlns:docu="docu-uri">
  <include href="rng/collectio.rng">
    <define name="authorship">
      <element name="authorship">
        <attribute name="type">
          <choice>
            <value type="string">invention</value>
            <value type="string">execution</value>
            <value type="string">commission</value>
          </choice>
        </attribute>
        <choice>
          <ref name="authorship-culture"/>
        </choice>
      </element>
    </define>
  </include>
</grammar>